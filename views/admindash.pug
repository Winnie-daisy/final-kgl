doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Admin Dashboard - Karibu Groceries
    link(rel='stylesheet' href='/css/admindash.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css' integrity='sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==' crossorigin='anonymous' referrerpolicy='no-referrer')
  
  body
    .dashboard
      aside.sidebar
        h2
          i.fas.fa-store.icon
          | Karibu Groceries
        
        h3.user-info Hello #{user && user.fullName || 'Admin'}!
        
        nav
          ul#sidebar
            li
              i.fa-solid.fa-table-columns.icon
              a(data-feature='dashboard') Dashboard
            li
              i.fa-solid.fa-users.icon
              a(data-feature='users') Users
            li
              i.fa-solid.fa-wheat-awn-circle-exclamation.icon
              a(href='/purchase') Purchase
            li
              i.fa-solid.fa-cart-shopping.icon
              a(href='/sales') Sales
            li
              i.fa-solid.fa-scale-balanced.icon
              a(href='/credit') Credit Sales
            li
              i.fa-solid.fa-gear.icon
              a(data-feature='settings') Settings
            li
              i.fa-solid.fa-arrow-right-from-bracket.icon
              a(href='#' data-feature='logout') Logout

      main.main-content#content
        header.header
          h1 Dashboard Overview
          .search-container
            input.search-bar(type='text' placeholder='Search...')
            i.fas.fa-search.search-icon
        
        section.stats
          .stat-box
            h3 
              i.fas.fa-chart-line.icon
              | Sales Overview
            p#salesText.stat-value.loading Loading...
          
          .stat-box
            h3
              i.fas.fa-box.icon
              | Stock Overview
            p#stockText.stat-value.loading Loading...
          
          .stat-box
            h3
              i.fas.fa-trophy.icon
              | Top Products
            p#topSalesText.stat-value.loading Loading...
          
          .stat-box
            h3
              i.fas.fa-history.icon
              | Recent Activity
            p#recentActivity.stat-value.loading Loading...

        section.alerts#alertsSection
          h3
            i.fas.fa-exclamation-triangle.icon
            | Stock Alerts
          p#stockAlertsText.loading Loading...

    footer
      p &copy; #{new Date().getFullYear()} Karibu Groceries Limited. All rights reserved.

    script(src='/js/dashboard.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/js/all.min.js' integrity='sha512-b+nQTCdtTBIRIbraqNEwsjB6UvL3UEMkXnhzd8awtCYh0Kcsjl9uEgwVFVbhoj3uu1DO1ZMacNvLoyJJiNfcvg==' crossorigin='anonymous' referrerpolicy='no-referrer')
