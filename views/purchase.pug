doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Purchase Dashboard
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
      }

      .container {
        max-width: 1000px;
        margin: auto;
        padding: 20px;
      }

      .container button {
        background-color: #1abc9c;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-bottom: 20px;
      }

      .container button:hover {
        background-color: #16a085;
      }

      .modal {
        display: none;
        position: fixed;
        z-index: 999;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.5);
      }

      .modal.show {
        display: block;
        animation: fadeIn 0.3s ease;
      }

      .modal-content {
        background-color: #fff;
        margin: 5% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 550px;
        border-radius: 8px;
        position: relative;
      }

      .modal-content form {
        display: flex;
        flex-direction: column;
        gap: 10px;
        width: 100%;
      }

      .modal-content input,
      .modal-content select {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1rem;
      }

      .modal-content button {
        background-color: #1abc9c;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
      }

      .modal-content .button-row {
        display: flex;
        gap: 10px;
      }

      .purchaseTable table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      .purchaseTable th, .purchaseTable td {
        border: 1px solid #ccc;
        padding: 10px;
        text-align: center;
      }

      .purchaseTable th {
        background-color: #2c3e50;
        color: white;
      }

      .action-btn {
        padding: 5px 10px;
        margin: 0 2px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        font-size: 0.9em;
      }

      .edit-btn {
        background-color: #3498db;
        color: white;
      }

      .delete-btn {
        background-color: #e74c3c;
        color: white;
      }

      .error {
        color: red;
        margin-top: 10px;
      }

      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }

  body
    .container
      button(type='button' onclick='openPurchaseForm()') Record Purchase
      h1 Purchase Records

      // Modal Overlay Form
      .modal#purchaseModal
        .modal-content
          form#purchaseForm
            input#produceName(type='text' name='produceName' placeholder='Name of Produce' required)
            input#produceType(type='text' name='produceType' placeholder='Type of Produce' required)
            input#purchaseDate(type='date' name='date' required)
            input#tonnageKgs(type='text' name='tonnage' placeholder='Tonnage in Kgs' required)
            input#costUgx(type='text' name='cost' placeholder='Cost (UGX)' required)
            input#dealerName(type='text' name='dealerName' placeholder='Dealer Name' required)
            select#branchName(name='branchName' required)
              option(value='') -- Select Branch --
              option(value='maganjjo') Maganjjo
              option(value='mattuga') Matugga
            input#dealerContact(type='text' name='contact' placeholder='Dealer Contact (e.g. +256712345678)' required)
            input#sellingPrice(type='text' name='sellingPrice' placeholder='Price to be Sold At' required)
            .button-row
              button(type='submit') Submit
              button(type='button' onclick='closePurchaseForm()') Cancel
            p#purchaseErrorMsg.error

      .purchaseTable
        table#salesTable
          thead
            tr
              th Produce
              th Type
              th Date
              th Tonnage (kg)
              th Cost (UGX)
              th Dealer
              th Branch
              th Contact
              th Selling Price
              th Actions
          tbody

      br
      br
      button(type='button' onclick='goBack()') Preview

    script(src='/js/purchase.js')
